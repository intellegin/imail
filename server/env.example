# Server Configuration
PORT=3000                         # The port your Express backend runs on
NODE_ENV=development              # Environment mode (development | production)

# Database Configuration (PostgreSQL)
DB_HOST=localhost                 # Database host (use 'postgres' if using Docker)
DB_PORT=5432                      # PostgreSQL default port
DB_NAME=imail                     # Name of your database
DB_USER=imail                     # PostgreSQL user
DB_PASSWORD=password              # PostgreSQL password
DATABASE_URL=postgresql://imail:password@localhost:5432/imail

# Session Configuration
SESSION_SECRET=super_long_session_secret

# Auth0 OIDC Configuration
AUTH0_CLIENT_ID=IMAIL_AUTH0_CLIENT_ID
AUTH0_ISSUER_BASE_URL=IMAIL_AUTH0_ISSUER_BASE_URL
BASE_URL=http://localhost:3000

# Frontend Configuration
FRONTEND_URL=http://localhost:5173                   # Frontend URL to redirect to after login/logout

# CORS Configuration
CORS_ORIGIN=http://localhost:5173                    # Frontend origin allowed by CORS
